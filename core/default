# cbot
# Module name     : default
# Module category : core
# Depends         : n/a
# Description     : default variables

DEFAULT_BOTNAME="cbot"
DEFAULT_BOTVERSION="0.10"
DEFAULT_BOTDESCRIPTION="A Bash Script IRC Bot"

# When loading modules in the $MODDIR,
# files with below suffixes will be ignored.
DEFAULT_IGNORESUFFIX='~ .bk .bak README'

# retry count to the power of 2 multiplying this value is the number of
# seconds to wait before next retry
DEFAULT_RETRYINC=10

# max consecutive retry after read timeout
DEFAULT_RETRYMAX=10

# timeout when read network (seconds)
DEFAULT_TIMEOUT=180
